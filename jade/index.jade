doctype html
html(lang="en").no-js
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    title Yellr Frontpage
    meta(name="description", content="Yellr Frontpage")
    include _head.jade

  body#index
    a(href="#main").visuallyhidden Skip to main content
    .container
      header.homepage-header
        .hgroup
          .row
            .columns
              h1 Yellr
              p Rochester, New York
                br
                small B E T A
        .homepage-header-report-form
          .row
            .columns.medium-centered.medium-5
              .row
                .columns
                  span Submit Tip
              form#report-form-1(data-media-type="text", method="post", accept-charset="utf-8", enctype="multipart/form-data")
                input(type="hidden", name="media_type", value="text")
                .row.collapse
                  .columns.small-9
                    input(type="text", name="media_text", placeholder="What's going on?")
                  .columns.small-3
                    a(href="#").button.prefix Submit
                //- .row
                  .columns
                    textarea(name="media_caption", rows="2", columns="10", placeholder="Enter more details here (optional)")
              span.anon-disclaimer All posts on Yellr are anonymous.

            //- .form-container
              //- default to text form
              //- text
              form(data-media-type="text", method="post", accept-charset="utf-8", enctype="multipart/form-data")
                input(type="hidden", name="media_type", value="text")
                input(type="text", name="media_caption", placeholder="Title (optional)")
                textarea(name="media_text", rows="2", columns="10", placeholder="I said hey. What's going on?")

              //- images
              //- form(data-media-type="image", method="post", accept-charset="utf-8", enctype="multipart/form-data")
                input(type="hidden", name="media_type", value="image")
                input(type="file", name="media_file", multiple)
                textarea(name="media_text", rows="2", columns="10", placeholder="Add description (optional)")

              //- video
              //- form(data-media-type="video", method="post", accept-charset="utf-8", enctype="multipart/form-data")
                input(type="hidden", name="media_type", value="video")
                textarea(name="media_text", rows="2", columns="10", placeholder="Add description")
                input(type="file", name="media_file", multiple)


              //- audio
              //- form(data-media-type="audio", method="post", accept-charset="utf-8", enctype="multipart/form-data")
                input(type="hidden", name="media_type", value="audio")
                input(type="file", name="media_file", multiple)
                textarea(name="media_text", rows="2", columns="10", placeholder="Add description")

              .right
                div.button
                  i.fa.fa-plus
                  | &nbsp;
                  i.fa.fa-video-camera
                div.button
                  i.fa.fa-plus
                  | &nbsp;
                  i.fa.fa-camera
                div.button
                  i.fa.fa-plus
                  | &nbsp;
                  i.fa.fa-headphones
              input(type="submit", value="Submit")#submit-tip.button.right





      main#main.main
        .row
          .columns.medium-9
            header
              h1.title-1 Latest Stories

            //- ul.latest-stories-list.no-bullets
              //- sample <li> markup
              li
                h2
                  a(href="article.html") My Story!
                p Voluptatibus magni ullam suscipit voluptate neque quas officia nemo nihil voluptatum iure eos deleniti, labore, voluptatem, dignissimos ipsa quae dolorem ad voluptas!
                a(href="article.html") Read
                p Published: 2015-02-18 19:19:19
                p Ends: 2015-12-31 23:59:59
                p Name: Yellr Feedback - World Wide
                p Organization: Rochester Institute of Technology
                p Organization description: RIT
                p Post count: 62
                p assignment_id: 1
            //- "contents_rendered": "... the <b>story</b>!"
            ul#latest-stories.latest-stories-list.no-bullets
            script#stories-li-template(type="text/x-handlebars-template").
              {{#each stories}}
                <li>
                  <div class="row">
                    {{#if banner_media_file_name}}
                    <div class="columns medium-8">
                    {{else}}
                    <div class="columns medium-12">
                    {{/if}}
                      <h2 class="story-title">
                        <a href="#" data-reveal-id="_{{story_unique_id}}">{{title}}</a>
                      </h2>
                      <ul class="inline-list">
                        <li>Posted: {{publish_datetime}}</li>
                        <li>Edited: {{edited_datetime}}</li>
                      </ul>
                      <p>{{description}}</p>
                      <p>{{top_text}}</p>
                      <ul class="inline-list">
                        <li>{{author_first_name}} {{author_last_name}}</li>
                        <li>{{author_email}}</li>
                        <li>{{author_organization}}</li>
                      </ul>
                      <p>{{tags}}</p>
                    </div>
                    {{#if banner_media_file_name}}
                    <div class="columns medium-4">
                      <img src="http://yellr.net/media/{{banner_media_file_name}}">
                    </div>
                    {{/if}}
                  </div>
                  <div id="_{{story_unique_id}}" class="reveal-modal" data-reveal aria-hidden="true" role="dialog">
                    <div>{{{contents_rendered}}}</div>
                    <a class="close-reveal-modal" aria-label="Close">&#215;</a>
                  </div>
                </li>
              {{/each}}

          .columns.medium-3
            header
              h1.title-1 Assignments
            //- ul.latest-assignments-list.no-bullets
              //- sample <li> markup
              li
                h3
                  a(href="article.html") Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                p Voluptatibus magni ullam suscipit voluptate neque quas officia nemo nihil voluptatum iure eos deleniti, labore, voluptatem, dignissimos ipsa quae dolorem ad voluptas!
                a(href="article.html") Read
                p Published: 2015-02-18 19:19:19
                p Ends: 2015-12-31 23:59:59
                p Name: Yellr Feedback - World Wide
                p Organization: Rochester Institute of Technology
                p Organization description: RIT
                p Post count: 62
                p assignment_id: 1

            ul#latest-assignments.latest-assignments-list.no-bullets
            script#assignment-li-template(type="text/x-handlebars-template").
              {{#each assignments}}
                <li>
                  <h3><a href="#">{{question_text}}</a></h3>
                  <p>{{description}}</p>
                </li>
              {{/each}}



        .row
          .columns
            h2.title-1 Latest Posts
        ul#latest-posts.latest-posts-list.no-bullets
